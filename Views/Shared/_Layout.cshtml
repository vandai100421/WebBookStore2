<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Web Book Store</title>

    @RenderSection("styles", required: false)
    @Styles.Render("~/bundles/UnicaseCSS")
    <link href='http://fonts.googleapis.com/css?family=Roboto:300,400,500,700' rel='stylesheet' type='text/css'>
    <link rel="shortcut icon" href="/assets/images/favicon.ico">
</head>

<body class="cnt-home">
    @{Html.RenderAction("HeaderHome", "Home");}
    <div class="body-content outer-top-xs" id="top-banner-and-menu">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-3 sidebar">
                    @{Html.RenderAction("CategoryHome", "Home");}
                    @{Html.RenderAction("SpecialHome", "Home");}
                    @{Html.RenderAction("SaleOffHome", "Home");}
                    @{Html.RenderAction("FeedbackHome", "Home");}
                </div>
                <div class="col-xs-12 col-sm-12 col-md-9 homebanner-holder">
                    @RenderBody()
                </div>
                <input type="hidden" data-urlloadcart="@Url.RouteUrl(new { controller = "Cart", action = "PartialCart" })" id="url_loadcart" />
            </div>
        </div>
    </div>
    @Html.Partial("Partials/_Footer");
    @Html.Partial("Partials/_boxChat");

    @Scripts.Render("~/bundles/UnicaseJS")
    <input type="hidden" id="base_url" value="@Url.RouteUrl(new {controller="/" })" />
    <script src="~/Assets/lib/signalr/signalr.js"></script>
    <script src="~/Assets/Scripts/ChatService/guest_process_chat.js"></script>
    @Scripts.Render("~/bundles/BSValidJS")
    @RenderSection("scripts", required: false)
    @RenderSection("jsFooter", required: false)
</body>
</html>
