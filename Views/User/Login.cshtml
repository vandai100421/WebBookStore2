@{ ViewBag.Title = "Login";
                Layout = "~/Views/Shared/_Layout.cshtml"; }

@{ ViewData["Title"] = "Đăng nhập"; }

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-8">
        <section>
            @using (Html.BeginForm("Login", "User", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="form-horizontal">
                    <h4>Nhập thông tin để đăng nhập</h4>
                    <hr />

                    <div class="form-group">
                        <label class="control-label col-md-4"></label>
                        <div class="col-md-8">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class = "control-label col-md-4">Email</label>
                        <div class="col-md-8">
                            <input name="Email" class="form-control input-custom-1" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-4">Mật khẩu</label>
                        <div class="col-md-8">
                            <input name="MatKhau" class="form-control input-custom-1" type="password"/>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-4 col-md-8">
                            <input type="submit" value="Đăng nhập" class="btn btn-default" />
                        </div>
                    </div>

                </div>}
        </section>
    </div>
</div>
